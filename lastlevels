#include <iostream>
using namespace std;

int main() {
int t, x, y, z, n;
cin>>t;

while (t>0) {
    cin>>x>>y>>z;
    if (x<=3) cout<<x*y<<endl;
    else {
        if (x%3==0) {
            n= (((x/3)-1)*z) + (x*y);
            cout<<n<<endl;
    }
    
    else {
            n= ((x/3)*z) + (x*y);
            cout<<n<<endl;
        }
    }
    
    t--;
}
	return 0;
}
